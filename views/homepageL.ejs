<!-- views/homepage.ejs -->
<!doctype html>
<html>
<head>
    <title>USGS Data Visualization - Homepage</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <!--<link rel="stylesheet" href="//unpkg.com/flatpickr/dist/flatpickr.min.css">-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/flatpickr"></script>
    <!--<script src="//unpkg.com/flatpickr"></script>-->
    <style>.floating-Box {
            display: inline-block;
        }

        .spCon {
            width: 1000px;
            border: 1px solid lightgray;
            padding: 40px 0px 40px 40px;
            border-radius: 40px 40px 0px 0px;
            margin-top: 50px;
        }

        .spCon2 {
            float: right;
            width: 1000px;
            border: 1px solid lightgray;
            padding: 40px;
            border-radius: 40px 0px 40px 40px;
            margin-top: 50px;
        }

        .button1 {
            width: 300px;
            height: 90px;
            border-radius: 10px;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
            cursor: pointer;
            background-color: white;
            color: #337ab7;
            border: 1px solid #337ab7;
            font-size: 18px;
            margin-left: 25px;
        }

        .button1:hover {
            background-color: #337ab7;
            color: white;
        }
        #mapViewer img {
            width: 500px;
            height: 500px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            top: 500px;
            left: 120px;
        }
        #mapViewer:hover img {
            visibility: visible;
            opacity: 1;
        }

        #usTurbine img {
            width: 650px;
            height: 500px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            top: 500px;
            left: 550px;
        }
        #usTurbine:hover img {
            visibility: visible;
            opacity: 1;
        }

        .navul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            /*overflow: hidden;*/
        }
        .navbutton1 {
            width: 110px;
            font-size: 16px;
            height: 80px;
            margin: 0;
            border-radius: 0px 0 0;
            background-color: #000000;
            border: 0 solid;
            color: #ffffff;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
        }

        .navbutton1:hover {
            background-color: #333;
            color: white;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropbutton {
            float: right;
            width: 150px;
            height: 80px;
            padding: 16px;
            color: white;
            background-color: #337ab7;
            border: none;
            cursor: pointer;
            font-size: 16px;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
        }
        .dropbutton:hover, .dropbutton:focus {
            background-color: #2b6699;
        }
        .dropdown-content {
            display: none;
            background-color: #f1f1f1;
            min-width: 160px;
            overflow: auto;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            right: 0;
            z-index: 1;
        }
        .dropdown-content a {
            color: black;
            padding: 20px;
            text-decoration: none;
            display: block;
        }
        .dropdown a:hover {
            background-color: #ddd;
        }
        .show {
            display: block;
        }
    </style>
</head>
<div class="navul" style="height:80px;background:#000000;">
    <a class="navul" style="background:#000000;" href="http://aworldbridge.com">
        <img class="banner" src="/images/NewWBBanner.jpg" style="width:510px;height:80px;"/>
    </a>
    <a href="/homepage" style="width:110px;">
        <button class="navbutton1"> Homepage </button>
    </a>
    <a href="/newRequest" id= "Request" style="width:110px;">
        <button class="navbutton1" style="width: 140px"> New Request </button>
    </a>
    <a href="/recovery" id ="Restore" style="width:50px;">
        <button class="navbutton1"> Restore </button>
    </a>
    <a href="/dataHistory" style="width:110px;">
        <button class="navbutton1" style="width: 160px"> Approved Requests </button>
    </a>
    <div class="dropdown" style="height: 80px; width: 200px; float: right; margin: 0;">
        <button onclick="dropDown()" class="dropbutton" id="Username">
            <%= firstName%>
            <span class="caret"></span>
        </button>
        <div id="userMenuAdmin" class="dropdown-content">
            <a href="/userProfile"> User Profile </a>
            <a href="/userManagement"> User Management </a>
            <a href="/signout"> Sign Out </a>
        </div>
        <div id="userMenuRegular" class="dropdown-content">
            <a href="/userProfile"> User Profile </a>
            <a href="/signout"> Sign Out </a>
        </div>
    </div>
</div>
<body>
<div class="container" style="width: 1000px;
    padding: 0px;">
    <br>
    <div class="page-header text-center header">
        <h1><span class="fa fa-home"></span><strong> USGS Data Visualization -  Homepage </strong></h1>
    </div>
    <div class="spCon">
        <div class="pop floating-Box">
            <a href="/mapsvcviewer" id="mapViewer" style="width: 110px;">
                <button class="button1"><span class="fa fa-angle-double-left"></span> Go to MapService Viewer </button>
                <img src="../images/MapViewer.png">
            </a>

            <a href="/usgswt" id="usTurbine">
                <button class="button1" style="margin-left: 250px"> Go to US Wind Turbines Viewer <span class="fa fa-angle-double-right"></span></button>
                <img src="../images/USTurbines.png">
            </a>
        </div>
    </div>
</div>
<script>
    $(function () {
        flatpickr(".date", {
            dateFormat: "Y-m-d",
            time_24hr: true
        });
    });
    var today = new Date();
    var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
    var time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
    var dateTime = date + ' ' + time2;
    document.getElementById("date").value = dateTime;

    function dropDown() {
        console.log(UserRole);
        if (UserRole === "Admin") {
            document.getElementById("userMenuAdmin").classList.toggle("show");
        } else if (UserRole === "Regular") {
            document.getElementById("userMenuRegular").classList.toggle("show");
        }
    }
    window.onclick = function(event) {
        if (!event.target.matches('.dropbutton')) {
            var dropdowns = document.getElementsByClassName("dropdown-content");
            for (var i = 0; i < dropdowns.length; i++) {
                var openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('show')) {
                    openDropdown.classList.remove('show');
                }
            }
        }
    }
</script>
</body>
</html>