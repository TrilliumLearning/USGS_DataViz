        .button1 {
            width: 300px;
            height: 90px;
            border-radius: 10px;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
            cursor: pointer;
            background-color: white;
            color: #337ab7;
            border: 1px solid #337ab7;
            font-size: 18px;
            margin-left: 25px;
        }

        .button1:hover {
            background-color: #337ab7;
            color: white;
        }

        #button2{
            width:330px;
            height:91px;
        }

        #button3{
            height: 85px;
        }

        #mapViewer img {
            width: 600px;
            height: 600px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-left: -580px;
            margin-top: 90px;
        }
        #mapViewer:hover img {
            visibility: visible;
            opacity: 1;
        }

        #usTurbine img {
            width: 650px;
            height: 500px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-left: -350px;
            margin-top: 90px;
        }
        #usTurbine:hover img {
            visibility: visible;
            opacity: 1;
        }
        #MineralResources img{
            width: 670px;
            height: 370px;
            /*position: absolute;*/
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-left: 40px;
        }
        #MineralResources:hover img{
            visibility: visible;
            opacity: 1;
        }
