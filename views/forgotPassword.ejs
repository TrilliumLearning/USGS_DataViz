<!doctype html>
<html>
<head>
    <title>FAW/Locust - Login</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <!--<link rel="stylesheet" href="//unpkg.com/flatpickr/dist/flatpickr.min.css">-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/flatpickr"></script>
    <!--<script src="//unpkg.com/flatpickr"></script>-->
    <style>
        body{
            padding-top:80px; word-wrap:break-word;
        }
        .floating-Box{
            display: inline;
        }
        .banner{
            position:relative;
            width:100%;
            text-align:center;
            display:inline-block;
        }
        /* for1024px or less */
        @media screen and (max-width:1024px) {
            h1 {
                font-size: 30px;
            }

            label {
                font-size: 20px;
            }

            p {
                font-size: 18px;
            }
            .btn{
                padding:8px;
            }
        }
            /* for 768px or less */
            @media screen and (max-width:768px) {
                h1{
                    font-size:20px;
                }
                label{
                    font-size:18px;
                }
                .btn{
                    margin:5px;
                    padding:8px;
                }
                p{
                    font-size:15px;
                }
            }
            /* for 480px or less */
            @media screen and (max-width:480px) {
                label{
                    font-size:17px;
                }
                .btn{
                    padding:7px;
                    font-size:17px;
                }
                p{
                    font-size:15px;
                }
            }
            /* for 375px or less */
            @media screen and (max-width:375px) {
                p{
                    font-size:15px;
                }
                .btn{
                    padding:8px;
                }
            }
            /* for 320px or less */
            @media screen and (max-width:320px) {
                h1{
                    font-size:20px;
                }
                label{
                    font-size:15px;
                }
                .btn{
                    font-size:12px;
                    padding:8px;
                }
                p{
                    font-size:15px;
                }
            }

    </style>
</head>
<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <a href="//aworldbridge.com"><img class="banner" src="/pic/NewWBBanner.jpg"  /></a>
        <h1><span class="fa fa-sign-in"></span> Forgot Password</h1>

        <!-- show any messages that come back with authentication -->
        <!--<% if (message.length > 0) { %>-->
        <!--<div class="alert alert-danger"><%= message %></div>-->
        <!--<% } %>-->

        <!-- LOGIN FORM -->
        <form action="/email" method="post" id="email">
            <div class="form-group">
                <label>Please enter your email address below: </label>
                <input type="email" class="form-control" name="username">
            </div>
            <button type="submit" class="btn btn-warning btn-lg"> Reset Password </button>
        </form>
        <br>

        <!--<p>Need an account? <a href="/signup"> Signup </a></p>-->
        <p>Or go back to <a href="/login">Login</a>.</p>
        <!--<p><a href="/reset"> Show off </a></p>-->
    </div>
</div>
<script>
    $(function(){
        $('#email').submit(function(e) {
            e.preventDefault();
            $.ajax({
                type: "post",
                url: "/email",
                dataType: 'json',
                data: $("#email").serialize(),
                success: function (result) {
                    if (!result.error) {
                        alert(result.message);
                        window.location.replace('/login');
                    } else {
                        alert("Z");
                        alert(result.message);
                    }
                }
            })
        });
    });

</script>
</body>
</html>
