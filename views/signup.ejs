<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>FAW/Locust -  Sign Up</title>
	<meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
	<!--<link rel="stylesheet" href="//unpkg.com/flatpickr/dist/flatpickr.min.css">-->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="//cdn.jsdelivr.net/npm/flatpickr"></script>
	<!--<script src="//unpkg.com/flatpickr"></script>-->
	<style>
		.floatingBox {
			display: inline-block;
		}
		body{ padding-top:80px; }
		.banner{
			position:relative;
			width: 100%;
		}
		/* for 768px or less */
		@media screen and (max-width:768px) {
			.btn-mg {
				font-size: 15px;
				width:90px;
				text-align:center;
			}
		}
		/* for 414px or less */
		@media screen and (max-width:414px) {
			.btn-mg {
				font-size: 13px;
				width:20%;
				text-align:center;
			}
		}
		/* for 375px or less */
		@media screen and (max-width:375px) {
			.btn-mg{
				font-size:12px;
				width:22%;
				text-align:center;
			}
		}
		/* for 320px or less */
		@media screen and (max-width:320px) {
			.btn-mg {
				font-size: 14px;
				width:30%;
				text-align:center;
			}

		}
	</style>

</head>
<body>
<div class="container">

	<div class="col-sm-6 col-sm-offset-3">
		<a href="//aworldbridge.com"><img class="banner" src="/images/NewWBBanner.jpg" style="height: 97px; width: 120%" /></a>
		<h1><span class="fa fa-sign-in"></span> Signup </h1>

		<!-- show any messages that come back with authentication -->
		<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<!-- LOGIN FORM -->
		<form action="/signup" method="post" id="signup">
			<div class="form-group">
				<label>Username (Valid Email Address)</label>
				<input type="email" class="form-control" name="username">
			</div>
			<div class="form-group">
				<label>First Name</label>
				<input type="text" class="form-control" name="firstName">
			</div>
			<div class="form-group">
				<label>Last Name</label>
				<input type="text" class="form-control" name="lastName">
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" class="form-control" name="password">
			</div>
			<div class="form-group" hidden>
				<label>User Role</label><br>
				<select name="userrole" >
					<option>Admin</option>
					<option selected>Regular</option>
				</select>

			</div>
			<div class="form-group">
				<label>Date Created</label>
				<input id="DATE" class="form-control date" name="dateCreated" readonly hidden>
			</div>
			<div class="form-group" hidden>
				<label>Created By User</label>
				<input type="text" id="createdUser" class="form-control" name="createdUser" value="Anonymous" readonly >
			</div>
			<div class="form-group" hidden>
				<label>Status</label>
				<input type="text" id="status" class="form-control" name="status" value="Never Logged In" readonly >
			</div>

			<button type="submit" class="btn btn-warning btn-mg"> submit </button>
			<a href="/login" class="btn btn-warning btn-mg">Cancel</a>
		</form>

		<hr>

	</div>

</div>
<script>
    $(document).ready(function() {
        $(function() {
            /*flatpickr(".date", {
                enableTime: true,
                dateFormat: "Y-m-d H:i:S",
                time_24hr: true
            });*/

            $('#signup').submit(function(e) {
                console.log($("#signup").serialize());
                e.preventDefault();
                $.ajax({
                    type: "post",
                    url: "/signup",
                    dataType: 'json',
                    data: $("#signup").serialize(),
                    success: function (result) {
                        if (!result.error) {
                            alert(result.message);
                            alert("We are sending you the email verification. Please check it before login to your account.");
                        } else {
                            alert(result.message);
                        }
                    }
                })
            });
        });
        var today = new Date();
        var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
        var time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
        var dateTime = date + ' ' + time2;
        document.getElementById("DATE").value = dateTime;
    });
</script>
</body>
</html>