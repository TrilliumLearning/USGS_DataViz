<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>FAW/Locust -  User Management - Add User</title>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
	<!--<link rel="stylesheet" href="//unpkg.com/flatpickr/dist/flatpickr.min.css">-->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="//cdn.jsdelivr.net/npm/flatpickr"></script>
	<!--<script src="//unpkg.com/flatpickr"></script>-->
	<style>
		.floatingBox {
			display: inline-block;
		}
		body{ padding-top:80px; }
		.banner{
			position:relative;
			width: 100%;
		}
		/* for 768px or less */
		@media screen and (max-width:768px) {
			.btn-mg {
				font-size: 15px;
				width:90px;
				text-align:center;
			}
		}
		/* for 414px or less */
		@media screen and (max-width:414px) {
			.btn-mg {
				font-size: 13px;
				width:20%;
				text-align:center;
			}
		}
		/* for 375px or less */
		@media screen and (max-width:375px) {
			.btn-mg{
				font-size:12px;
				width:22%;
				text-align:center;
			}
		}
		/* for 320px or less */
		@media screen and (max-width:320px) {
			.btn-mg {
				font-size: 14px;
				width:30%;
				text-align:center;
			}

		}
	</style>

</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">
	<a href="//aworldbridge.com"><img class="banner" src="/pic/NewWBBanner.jpg" style="height: 97px; width: 120%" /></a>
	<h1><span class="fa fa-sign-in"></span> Signup </h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form onsubmit="return checkForm()" action="/signup" method="post">
		<div class="form-group">
			<label>Username</label>
			<input type="email" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label>First Name</label>
			<input type="text" class="form-control" name="firstName">
		</div>
		<div class="form-group">
			<label>Last Name</label>
			<input type="text" class="form-control" name="lastName">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>
		<div class="form-group">
			<label>User Role</label><br>
			<input type="radio" name="userrole" value="Admin"><h5 class="floatingBox">&nbsp;&nbsp;&nbsp;Admin</h5>&nbsp;&nbsp;&nbsp;&nbsp;
			<input type="radio" name="userrole" value="Regular"><h5 class="floatingBox">&nbsp;&nbsp;&nbsp;Regular</h5>
		</div>
		<div class="form-group">
			<label>Date Created</label>
			<input id="DATE" class="form-control date" name="dateCreated" readonly>
		</div>
		<div class="form-group" hidden>
			<label>Created By User</label>
			<input type="text" id="createdUser" class="form-control" name="createdUser" value="<%= user.username %>" readonly >
		</div>
		<div class="form-group" hidden>
			<label>Status</label>
			<input type="text" id="status" class="form-control" name="status" value="Never Logged In" readonly >
		</div>

			<button type="submit" class="btn btn-warning btn-mg"> Add User </button>
			<a href="/userManagement" class="btn btn-warning btn-mg">Cancel</a>
		</form>

		<hr>

	</div>

</div>
<script>
    $(document).ready(function() {
        $(function() {
            /*flatpickr(".date", {
                enableTime: true,
                dateFormat: "Y-m-d H:i:S",
                time_24hr: true
            });*/
        });
        var today = new Date();
        var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
        var time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
        var dateTime = date + ' ' + time2;
        document.getElementById("DATE").value = dateTime;
    });
</script>
</body>
</html>
