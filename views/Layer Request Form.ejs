    function submitForm () {
        alert("Submitted!");
        var data =$("#layer").serialize();
        console.log(data);
        $.ajax({
            url  : 'http://localhost:9086/submitL',
            method : "post",
            data : data,
            dataType: 'json',
            success : function(d){
                console.log(d);
            }
