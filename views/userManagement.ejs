<div class="container">
    <div id="userListForm">
        <div class="row">
            <h4 class="floatingBox"><strong>Date Created:</strong></h4>&nbsp;&nbsp;&nbsp;&nbsp;
            <h6 class="floatingBox">From:</h6>&nbsp;
            <input class="inputBoxDate datePicker date" type="text" id="dateCreated" placeholder="Select Date">&nbsp;&nbsp;
            <h6 class="floatingBox">To:</h6>&nbsp;
            <input class="inputBoxDate datePicker date" type="text" id="dateCreated" placeholder="Select Date">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <h4 class="floatingBox DateModified1"><strong>Date Modified:</strong></h4>&nbsp;&nbsp;
            <h6 class="floatingBox DateModified2">From:</h6>&nbsp;
            <input class="inputBoxDate datePicker date DateModified3" type="text" id="dateModified" placeholder="Select Date">&nbsp;&nbsp;
            <h6 class="floatingBox DateModified2">To:</h6>&nbsp;
            <input class="inputBoxDate datePicker date DateModified3" type="text" id="dateModified" placeholder="Select Date">
        </div>
        <br>
        <div class="row">
            <h4 class="floatingBox"><strong>User:</strong></h4>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <h6 class="floatingBox">First Name:</h6>&nbsp;&nbsp;&nbsp;
            <input class="inputBoxDate" type="text" id="firstName" placeholder="Enter First Name">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <h6 id="123" class="floatingBox">Last Name:</h6>&nbsp;&nbsp;&nbsp;
            <input class="inputBoxDate" type="text" id="lastName" placeholder="Enter Last Name">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <h6 class="floatingBox">Phone Number:</h6>&nbsp;&nbsp;&nbsp;
            <input class="inputBoxDate" id="Phone_Number" type="text" placeholder="Enter Phone Number">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <br><br>
            <div class="center">
                <h4 class="floatingBox"><strong>Status:&nbsp;</strong></h4>
                <select id="status">
                    <option value="">Select the status</option>
                    <option value="Active">Active</option>
                    <option value="Never Logged In">Never Logged In</option>
                    <option value="Suspended">Suspended</option>
                </select>
            </div>
            <br>
            <h4 class="floatingBox" id="Role"><strong>User Role:</strong></h4>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="userrole" id="Regular" value="Regular">
            <h5 class="floatingBox click">&nbsp;&nbsp;&nbsp;Regular</h5>&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="userrole" id="Admin" value="Admin">
            <h5 class="floatingBox click">&nbsp;&nbsp;&nbsp;Admin</h5>&nbsp;&nbsp;&nbsp;&nbsp;
        </div>
        <br>
        <input type="submit" onclick="query()" id="Filter" class="btn btn-default" style="color: #ffffff; background-color: #a7cb9f" value="Filter">
