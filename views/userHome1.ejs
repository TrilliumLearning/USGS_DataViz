        var filter3 = document.getElementsByClassName("filter")[2].value;
        var content1 = document.getElementsByClassName("content")[0].value;
        var content2 = document.getElementsByClassName("content")[1].value;
        var content3 = document.getElementsByClassName("content")[2].value;

        queryString1 = "statusDel=" + "Active" + "&firstName=" + firstName + "&lastName=" + lastName + "&startDate=" + startDate + "&endDate=" + endDate;
        queryString2 = "&filter1=" + filter1 + "&filter2=" + filter2 + "&filter3=" + filter3 + "&content1=" + content1 + "&content2=" + content2 + "&content3=" + content3;

        var queryStr =  queryString1 + queryString2;
        // alert(queryStr);
        table.clear();
        table.draw();
        trapTable.clear();
        trapTable.draw();
        queryAndDisplay(queryStr);
    }

    var queryAndDisplay = function (querystr) {
        $.ajax({
            url: '/filterQuery',
            type: 'GET',
            dataType: 'json',
            async: false,
            data: querystr,
            success: function (resp) {

                if (!resp[0].errMsg) {
                    for (var i = 0; i < resp.length; i++) {
                        if (resp[i].Entry_type === "FIELD SCOUTING") {
                            table.row.add([
                                resp[i].transactionID,
                                resp[i].Date,
                                resp[i].Location_name,
                                resp[i].Latitude,
                                resp[i].Longitude,
                                resp[i].Training,
                                resp[i].Main_crop,
                                resp[i].Main_crop_variety,
                                resp[i].Irrigation,
                                resp[i].Fertilized_used,
                                resp[i].Crop_stage,
                                resp[i].General_health,
                                resp[i].Farming_system,
                                resp[i].Rotation_intercropping_crop,
                                resp[i].Field_size,
                                resp[i].Field_size_unit,
                                resp[i].Main_crop_planting_date,
                                resp[i].Date_of_last_rain,
                                resp[i].Rain_amount,
                                resp[i].Pest_species,
                                resp[i].Present_absent,
                                resp[i].Crop_damage,
                                resp[i].Current_damage,
                                resp[i].Previous_damage,
                                resp[i].Natural_enemies,
                                resp[i].Dead_larvae,
                                resp[i].Crop_infested,
                                resp[i].Control_undertaken,
                                resp[i].Pesticide_name,
                                resp[i].Biopesticide_name,
                                resp[i].Pesticide_litres,
                                resp[i].Biopesticide_litres,
                                resp[i].Damage_photo,
                                resp[i].Damage_photo_name,
                                resp[i].Pest_photo,
                                resp[i].Pest_photo_name
                            ]).draw(false);
                            // drawImage(i + 1, 30, resp[i].Damage_photo, "damage");
                            // drawImage(i + 1, 31, resp[i].Pest_photo, "pest");
                        } else if (resp[i].Entry_type === "PHEROMONE TRAP") {
                            trapTable.row.add([
                                resp[i].transactionID,
                                resp[i].Date,
                                resp[i].Location_name,
                                resp[i].Latitude,
                                resp[i].Longitude,
                                resp[i].Main_crop,
                                resp[i].Main_crop_variety,
                                resp[i].Irrigation,
                                resp[i].Fertilized_used,
                                resp[i].Crop_stage,
                                resp[i].General_health,
                                resp[i].Farming_system,
                                resp[i].Rotation_intercropping_crop,
                                resp[i].Field_size,
                                resp[i].Field_size_unit,
                                resp[i].Main_crop_planting_date,
                                resp[i].Date_of_last_rain,
                                resp[i].Rain_amount,
                                resp[i].Trap_ID,
                                resp[i].Trap_location,
                                resp[i].Number_of_traps,
                                resp[i].FAW_confirmed,
                                resp[i].FAW_suspected,
                                resp[i].Other_species,
                                resp[i].Trap_status,
                                resp[i].Lure_name,
                                resp[i].Trap_replaced,
                                resp[i].Date_trap_replaced,
                                resp[i].Lure_replaced,
                                resp[i].Date_lure_replaced
                            ]).draw(false);
                        }

                        // array
                        var latiDMS = resp[i].Latitude.split(" ");
                        var longDMS = resp[i].Longitude.split(" ");
                        // convert latitude & longitude from Degrees Minutes Seconds to Decimal Degree
                        var latiDD = parseFloat(latiDMS[1].substring(0,latiDMS[1].length - 1)) + (parseFloat(latiDMS[2].substring(0,latiDMS[2].length - 1)) / 60) + (parseFloat(latiDMS[3].substring(0,latiDMS[3].length - 1)) / 3600);
                        var longDD = parseFloat(longDMS[1].substring(0,longDMS[1].length - 1)) + (parseFloat(longDMS[2].substring(0,longDMS[2].length - 1)) / 60) + (parseFloat(longDMS[3].substring(0,longDMS[3].length - 1)) / 3600);
                        // change to negative if S or W
                        if (latiDMS[0] === "S") {
                            latiDD = latiDD * -1;
                        }
                        if (longDMS[0] === "W") {
                            longDD = longDD * -1;
                        }

                        var center = {lat: 0, lng: 0};
                        map = new google.maps.Map(document.getElementById('map'), {
                            zoom: 2,
                            center: center,
                            mapTypeId: 'hybrid'
                        });

                        var position = {lat: latiDD, lng: longDD};
                        var marker = new google.maps.Marker({
                            position: position,
                            map: map
                        });

                        marker.DMS = resp[i].Latitude + "; " + resp[i].Longitude;
                        markers.push(marker);
                        markers[i].setMap(null);
                    }
                } else {
                    alert(resp[0].errMsg);
                }
            }
        });
    }

