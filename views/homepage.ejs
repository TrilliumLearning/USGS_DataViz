    <style>.floating-Box {
            display: inline-block;
        }

        .spCon {
            width: 1000px;
            border: 1px solid lightgray;
            padding: 40px 0px 40px 40px;
            border-radius: 40px 40px 40px 0px;
            margin-top: 50px;
        }

        .spCon2 {
            float: right;
            width: 1000px;
            border: 1px solid lightgray;
            padding: 40px;
            border-radius: 40px 0px 40px 40px;
            margin-top: 50px;
        }

        .button1 {
            width: 250px;
            height: 90px;
            border-radius: 10px;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
            cursor: pointer;
            background-color: white;
            color: #337ab7;
            border: 1px solid #337ab7;
            font-size: 18px;
            margin-left: 25px;
        }

        .button1:hover {
            background-color: #337ab7;
            color: white;
        }
        #mapViewer img {
            width: 700px;
            height: 700px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            top: 5em;
            left: 3em;
            border: 1px solid lightgray;
            border-radius: 15px;
        }
        #mapViewer:hover img {
            visibility: visible;
            opacity: 1;
        }

        #usTurbine img {
            width: 950px;
            height: 700px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            top: 5em;
            left: 3em;
            border: 1px solid lightgray;
            border-radius: 15px;
        }
        #usTurbine:hover img {
            visibility: visible;
            opacity: 1;
        }
    </style>
</head>
<div class="navul" style="height: 80px;
    background: #000000;">
    <a class="navul" href="//aworldbridge.com" style="background: #000000;
    width: 500px;
    height: 60px;">
        <img class="banner" src="../images/NewWBBanner.jpg" style="width: 550px;
    height: 80px;
    margin: auto; display: block;" />
    </a>
</div>
<body>
<div class="container" style="width: 1000px;
    padding: 0px;">
    <br>
    <div class="page-header text-center header">
        <h1><span class="fa fa-home"></span><strong> USGS Data Visualization -  Homepage </strong></h1>
    </div>
    <div class="spCon">
        <h2 class="floating-Box">Go directly to layer viewer: </h2>
        <div class="pop floating-Box">
            <a href="/mapsvcviewer" id="mapViewer" style="width: 110px;">
                <button class="button1 floating-Box"><span class="fa fa-angle-double-left"></span> MapService Viewer </button>
                <img src="../images/MapViewer.png">
            </a>

        <a href="/usgswt" id="usTurbine" style="width: 110px;">
            <button class="button1 floating-Box"><span class="fa fa-angle-double-left"></span> US Wind Turbines Viewer </button>
            <img src="../images/USTurbines.png">
        </a>
        </div>
    </div>
    <div class="spCon2">
        <h2 class="floating-Box">Login to your account: </h2>
        <a href="/login" style="width: 110px;">
            <button class="button1 floating-Box" style="margin-right: 25px"> Login <span class="fa fa-angle-double-right"></span></button>
        </a>
        <h4 class="floating-Box">or</h4>
        <a href="/signup" style="width: 110px;">
            <button class="button1 floating-Box"> Sign Up <span class="fa fa-angle-double-right"></span></button>
        </a>

    </div>
</div>
<script>
    $(function () {
        flatpickr(".date", {
            dateFormat: "Y-m-d",
            time_24hr: true
        });
    });
    var today = new Date();
    var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
    var time2 = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
    var dateTime = date + ' ' + time2;
    document.getElementById("date").value = dateTime;
</script>
</body>
</html>