    <style>
        .floating-Box {
            display: inline-block;
        }

        .spCon {
            width: 1000px;
            border: 1px solid lightgray;
            padding: 40px 0px 40px 40px;
            border-radius: 0px 0px 40px 40px;
            margin-top: 50px;
            height:480px;
        }

        .button1 {
            width: 300px;
            height: 90px;
            border-radius: 10px;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
            cursor: pointer;
            background-color: white;
            color: #337ab7;
            border: 1px solid #337ab7;
            font-size: 18px;
            margin-left: 25px;
        }

        .button1:hover {
            background-color: #337ab7;
            color: white;
        }

        .Button {
            width: 300px;
            height: 90px;
            border-radius: 10px;
            -webkit-transition-duration: 0.4s;
            transition-duration: 0.4s;
            cursor: pointer;
            background-color: white;
            color: #337ab7;
            border: 1px solid #337ab7;
            font-size: 18px;
            /*margin-left: 25px;*/
        }

        .Button:hover {
            background-color: #337ab7;
            color: white;
        }

        #button2{
            width:330px;
        }

        #button3{
            width:300px;
        }

        #button4{
            width:330px;
        }

        #mapViewer img {
            width: 500px;
            height: 490px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-left: -600px;
            margin-top: 90px;
        }
        #mapViewer:hover img {
            visibility: visible;
            opacity: 1;
        }

        #usTurbine img {
            width: 540px;
            height: 400px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-left: 650px;
        }
        #usTurbine:hover img {
            visibility: visible;
            opacity: 1;
        }
        #MineralDeposits img{
            width: 620px;
            height: 320px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-top: 255px;
            margin-left: -500px;
        }
        #MineralDeposits:hover img{
            visibility: visible;
            opacity: 1;
        }

        #MineralResources img{
            width: 640px;
            height: 320px;
            position: absolute;
            visibility: hidden;
            opacity:0;
            transition: visibility 0s, opacity 0.5s linear;
            border: 1px solid lightgray;
            border-radius: 15px;
            margin-top: 258px;
            margin-left: -370px;
        }
        #MineralResources:hover img{
            visibility: visible;
            opacity: 1;
        }
    </style>
</head>
<div class="navul" style="height: 150px;
    background: #000000;">
    <a class="navul" href="http://aworldbridge.com" style="background: #000000;
