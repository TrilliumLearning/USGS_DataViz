<body>

<div class="container">
    <a href="http://aworldbridge.com"><img class="banner" src="../images/NewWBBanner.jpg"/></a>
    <div id="container">
        <h1 id="title" style="margin-top:-20px;">Layer Request Form</h1>
        <h3 id="Linfo" style="margin-top:30px;">Layer Information</h3>
        <div class="generalForm">
            <form class="well form-horizontal" id="layer">
                <fieldset >
                    <div class="form-group">
                        <label class="col-md-4 control-label">Date</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                <input id="date" name="Date" class="form-control" required readonly type="text" value="" >
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Request ID</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="RID" name="RID" style="background:WhiteSmoke;" readonly class="form-control" required type="text" value="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">User ID</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="User ID" name="UID" style="background:WhiteSmoke;"  readonly class="form-control" required type="text" value="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Main-Category</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon" style="max-width: 100%;"><i class="glyphicon glyphicon-list"></i></span>
                                <select required id="main" class="selectpicker form-control" name="FirstLayer" onchange="ChangeMainCategory(this.value); Check(this.value);"  >
                                    <option value="Category">SELECT MAIN CATEGORY</option>
                                    <option>Energy</option>
                                    <option>Water</option>
                                    <option>Agriculture</option>
                                    <option>Transportation</option>
                                    <option>Economics</option>
                                    <option>Health_Services</option>
                                    <option>Risk_Management</option>
                                    <option>Education</option>
                                    <option value="other">Other(Please specify)</option>
                                </select>
                                <div id="other1" style="display:none;">
                                    <input type="text" name="FirstOther">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Sub-Category</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon" style="max-width: 100%;"><i class="glyphicon glyphicon-list"></i></span>
                                <select id="sub" class="selectpicker form-control" name="SecondLayer" value="">
                                    <option value="Category">SELECT SUBCATEGORY</option>
                                    <option value="other" id="secondOther">Other(Please specify)</option>
                                </select>
                                <div id="other2" style="display:none;">
                                    <input type="text" name="SecondOther">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Layer Name</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                <input id="LayerNameInput" name="LayerName" value="" placeholder="Layer Name" class="form-control" required  type="text" onchange="SearchLayerName(this.value)"></div>
                            <p id="LayerName1" style="color: palevioletred;margin-top:15px;">Please enter the Layer Name, and there is no space allowed.</p>
                        </div>
                    </div>
                    <!--<p id="LayerName1" style="color: palevioletred; margin-left:270px;">Please Enter the Layer Name, the Layer Name must be at least 6 characters</p>-->
                    <div class="form-group">
                        <label class="col-md-4 control-label">Layer Continent</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon" style="max-width: 100%;"><i class="glyphicon glyphicon-globe"></i></span>
                                <!--<input id="LayerContinentInput" name="ContinentName" placeholder="Layer Continent" class="form-control" required value="" type="text"></div>-->
                                <select name="ContinentName" class="form-control selectpicker" onclick="ContinentName();" id="continent" >
                                    <option selected>SELECT CONTINENT</option>
                                    <!--<option>Africa</option>-->
                                    <!--<option>Antarctica</option>-->
                                    <!--<option>Asia</option>-->
                                    <!--<option>Australia</option>-->
                                    <!--<option>Europe</option>-->
                                    <!--<option>North America</option>-->
                                    <!--<option>South America</option>-->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Layer Country</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                                <select name="CountryName" class="crs-country form-control" data-region-id="two" data-default-option="SELECT COUNTRY" id="country">
                                    <!--<option value="">Please select a country</option>-->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Layer State</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                                <!--<select name="StateName" id="two" class="crs-region form-control" data-default-option="SELECT STATE" data-blank-option="NO STATE SELECTED">-->
                                <!--<option>Please select a state</option>-->
                                <input name="StateName" value="" placeholder="State Name" class="form-control" required  type="text">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Layer Description</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div>
                                <textarea class="form-control" id="message" name="Layer_Description" placeholder="Enter your description here..." required type="text" rows="6" maxlength="400" ></textarea>
                                <p style="color:palevioletred;margin-top:15px;">Please include image resolution, drone altitude, date created and other conditions.</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Layer Format</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon" style="max-width: 100%;"><i class="glyphicon glyphicon-list"></i></span>
                                <select required class="selectpicker form-control" name="LayerFormat">
                                    <option value="">SELECT LAYER FORMAT</option>
                                    <option>GeoTIFF</option>
                                    <option>Shapefile</option>
                                    <option>JPG</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label  class="col-md-4 control-label">Layer Uploader</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div id="uploader" ></div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="row">
            <div class="column">
                <button id="submit" type="submit" value="Submit" form="layer"  >Submit</button>
            </div>
            <div class="column">
                <button id="clear" type="reset" onclick="clearForm()" value="  Clear  ">Clear</button>
            </div>
            <div class="column">
                <button id="cancel" type="button" onclick="userHome();">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    var UserRole = "<%= user.userrole %>";
    var getvalue = JSON.parse(localStorage.getItem("getvalue"));

    $(document).ready(function() {
        document.getElementById('date').value = getvalue[0];
        document.getElementById('User ID').value = getvalue[1];
        document.getElementById('RID').value = getvalue[2];
        document.getElementById('LayerNameInput').value = getvalue[11];
        document.getElementById('LayerStateInput').value = getvalue[6];
        document.getElementById('LayerCountryInput').value = getvalue[5];
        document.getElementById('LayerContinentInput').value = getvalue[4];
        document.getElementById('LayerFormat').value = getvalue[13];
        document.getElementById('message').value = getvalue[12];
        document.getElementById('idname').value = getvalue[9];

        if(getvalue[7] === "other" || getvalue[9] === "other"){
            document.getElementById('main').value = getvalue[7];
            document.getElementById("other1").style.display = "block";
            document.getElementById("inputone").value = getvalue[8];
            document.getElementById('idname').innerText = getvalue[9];
            document.getElementById("other2").style.display = "block";
            document.getElementById("inputtwo").value = getvalue[10];
        }else{
            document.getElementById('main').value = getvalue[7];
            document.getElementById('sub').options[0].innerHTML = getvalue[9];
        }

        $(function () {
            if (UserRole === "Admin") {
                document.getElementById("approve").disabled = false;
                document.getElementById("submit").style.backgroundColor = "lightgray";
            } else if (UserRole === "Regular") {
                document.getElementById("submit").disabled = false;
                document.getElementById("approve").style.backgroundColor = "lightgray";
            }

        });

        $("#main").change(function () {
            var val = $(this).val();
            if (val == "Category") {
                $("#sub").html("<option value='Category'>SELECT SUBCATEGORY</option>");
            }else if(val =="other") {
                $("#sub").html("<option value='other'>Other(Please specify)</option>");
            }
        })

    });

    function Check(that) {
        console.log(that);
        if (that === "other") {
            document.getElementById("other1").style.display = "block";
            document.getElementById("other2").style.display = "block";
        } else {
            document.getElementById("other1").style.display = "none";
            document.getElementById("other2").style.display = "none";
        }
    }
    //resubmit the photo
    var photoDiv = $("#photo");
    photoDiv.empty();
    var editIDSr = "editIDSr=" + getvalue[2];
    $.ajax({
        url: 'edit',
        type: 'GET',
        dataType: 'json',
        data: editIDSr,
        success: function (results) {
            if (!results.error) {
                globalResults = results;
                var list = [];
                for (var i = 0; i < globalResults.length; i++) {
                    var first = {
                        id: i,
                        size: 561276,
                        thumbnailUrl: globalResults[i].Layer_Uploader,
                        name: globalResults[i].Layer_Uploader_name
                    };
                    list.push(first);
                }
                uploader.addInitialFiles(list);
            } else {
                console.log("didn't work :(");
            }
        }
    });

    var uploader = new qq.FineUploader({
        element: document.getElementById("uploader"),
        // debug: true,
        request: {
            endpoint: 'upload'
        },
        cors: {
            //all requests are expected to be cross-domain requests
            expected: true
        },
        deleteFile: {
            enabled: true, // defaults to false
            endpoint: 'deleteFiles'
        },
        callbacks: {
            onComplete: function (id, name, responseJSON) {
                uploader.setUuid(id, responseJSON.newuuid);
            }
        },
        validation:{
            allowedExtensions: ['GeoTIFF', 'shp','jpg']
        }
    });

    function submitForm () {
        if (UserRole === "Admin") {
            if (confirm("Are you sure you would like to approve this data?") === true) {
                var tID = "tID=" + document.getElementById('RID').value;
                var LUN = "LUN=" + getvalue[15];
                var data = $("#layer").serialize();
                $.ajax({
                    url: 'approve',
                    type: "GET",
                    dataType: 'json',
                    data: tID + '&' + LUN,
                });
                $.ajax({
                    url: 'replace',
                    method: "post",
                    data: data,
                    dataType: 'json',
                    success: function (d) {
                        console.log(d);
                    }
                });
                window.location.replace('/userHome');
            } else {
                return false;
            }
        }else if (UserRole === "Regular") {
            if (confirm("Are you sure you would like to submit this data?") === true) {
                var regulardata = $("#layer").serialize();
                $.ajax({
                    url: 'rsubmit',
                    method: "post",
                    data: regulardata,
                    dataType: 'json',
                    success: function (d) {
                    }
                });
                window.location.replace('/userHome');
            } else {
                return false;
            }
        }
    }

    function ChangeMainCategory(Category){
        var subList = document.getElementById("sub");
        while (subList.options.length){
            subList.remove(0);
        }
        $.ajax({
            url: "MainCategory",
            dataType: 'json',
            success:function (results) {
                var option;
                for (var i = 0; i < results.length; i++) {
                    if (Category === results[i]. FirstLayer) {
                        option = new Option(results[i].SecondLayer, results[i].SecondLayer);
                        subList.add(option);
                        document.getElementById("sub").disabled = false;
                    }
                }
            }
        })
    }

    function userHome() {
        if (confirm("Are you sure you to leave this page? All the data will be cleared accordingly!") === true) {
            window.location.replace('/userHome')
        }
    }

    function clearForm(){
        if (confirm("Are you sure to clear this page? All the data will be cleared accordingly!") === true) {
            document.getElementById("layer").reset();
            document.getElementById("sub").disabled = true;
            $("#sub").html("<option value='Category'>SELECT SUBCATEGORY</option>");
        }
    }

   // Wait for the DOM to be ready
    $('#layer').validate({
        // Specify validation rules
        rules: {
            // The key name on the left side is the name attribute
            // of an input field. Validation rules are defined
            // on the right side
            Layer_Name: "required",
            StateName:"required",
            CountryName:"required",
            ContinentName:"required",
            FirstLayer:"required",
            SecondLayer:"required",
            Layer_Description: "required",
            LayerFormat:"required"

        },
        // Specify validation error messages
        messages: {
            Layer_Name: "Please enter the layer name",
            StateName:"Please enter the layer state",
            CountryName:"Please enter the layer country",
            ContinentName:"Please enter the layer continent",
            FirstLayer: "Please select the main category",
            SecondLayer:"Please select the subcategory",
            Layer_Description: "Please write the description of the layer",
            LayerFormat:"Please choose your layer format"
        },

        // Make sure the form is submitted to the destination defined
        // in the "action" attribute of the form when valid
        submitHandler: function (form) {
            submitForm();
        }
    });

    function SearchLayerName(value){
        $.ajax({
            url: "SearchLayerName",
            dataType:"json",
            success: function (results) {
                for(var i = 0; i < results.length; i++) {
                    if (value === results[i].ThirdLayer) {
                        document.getElementById("LayerName1").innerHTML = "The Layer Name has already been used";
                        document.addEventListener("keyup", function (e) {
                            if (event.keyCode === 8) {
                                document.getElementById("LayerName1").innerHTML = "Please Enter the Layer Name, the Layer Name length at least 6 characters";
                            }
                        }, false);
                        break;
                    } else{
                        document.getElementById("LayerName1").innerHTML = "This Layer Name is available";
                    }
                }
                if(value.length === 0){
                    document.getElementById("LayerName1").innerHTML = "Please Enter the Layer Name, the Layer Name length at least 6 characters";
                }
            }
        })
    }
</script>
</body>
